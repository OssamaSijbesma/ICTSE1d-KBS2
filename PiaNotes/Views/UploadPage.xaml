<Page
    x:Class="PiaNotes.Views.UploadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiaNotes.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <RelativePanel Background="#162632">
            <Rectangle x:Name="MenuStrip" Fill="#253847"
                       MinHeight="36"
                       MinWidth="250"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"/>

            <Button x:Name="File" MinHeight="36" Content="File" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#253847">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="New MIDI File" Click="FileNewMIDIFile_Click" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button x:Name="Options" MinHeight="36" Content="Options" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#253847" RelativePanel.RightOf="File">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="nav_practice" Text="Practice" Click="NavPractice_Click" />
                        <MenuFlyoutItem x:Name="nav_settings" Text="Settings" Click="NavSettings_Click" />
                        <MenuFlyoutItem x:Name="nav_credits" Text="Credits" Click="NavCredits_Click" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            


           
            <TextBlock Text="Title" HorizontalAlignment="Left" Height="28" Margin="0,133,0,0" TextWrapping="Wrap" RelativePanel.AlignLeftWith="TitleBox" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="TitleBox" PlaceholderText="Insert title here" Height="26" Margin="0,126,821,0" Text="" MinWidth="250" HorizontalAlignment="Right" VerticalAlignment="Top" Width="598" Background="Transparent"
                     RelativePanel.AlignRightWithPanel="True"
                     RelativePanel.Below="MenuStrip"
                     TextChanged="Title_TextChanged"
                     />
            <TextBlock Text="Open MIDI File" HorizontalAlignment="Left" Height="28" Margin="0,0,0,0" TextWrapping="Wrap" RelativePanel.AlignLeftWith="OpenFile" VerticalAlignment="Top" FontSize="18"/>
            <Button Name="OpenFile" Content="Open" HorizontalAlignment="Center" Margin="0,0,0,0" RelativePanel.AlignLeftWith="TitleBox" RelativePanel.AlignBottomWith="TitleBox" />
           


        </RelativePanel>
    </Grid>
</Page>

<Page
    x:Class="PiaNotes.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiaNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">

    <Grid>
        <RelativePanel Background="#162632" HorizontalAlignment="Stretch" Margin="-10,0,10,0" VerticalAlignment="Stretch">
            <Rectangle x:Name="MenuStrip" Fill="#253847"
                       MinHeight="35" MinWidth="250"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"/>
            <Button x:Name="Return" Content="Return" Click="NavBack_Click" 
                    HorizontalAlignment="Center" RelativePanel.AlignRightWithPanel="True" Background="#253847" />
            <TextBlock Text="Input devices:" Name="InputText" Style="{StaticResource TitleTextBlockStyle}" Margin="80,136,0.8,-189" 
                       RelativePanel.AlignLeftWithPanel="True" RelativePanel.Above="MenuStrip" FontSize="36" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock Text="Output devices:" Name="OutputText" Style="{StaticResource TitleTextBlockStyle}" Margin="65,301,16.2,-346" 
                       RelativePanel.AlignLeftWithPanel="True"  RelativePanel.Above="InputText" FontSize="36" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <ListBox x:Name="midiInPortListBox" SelectionChanged="midiInPortListBox_SelectionChanged" 
                     Margin="348,110,0,-206" HorizontalAlignment="Left" RelativePanel.Above="MenuStrip" Width="1082"/>
            <ListBox x:Name="midiOutPortListBox" SelectionChanged="midiOutPortListBox_SelectionChanged" 
                     Margin="348,250,0,-348" HorizontalAlignment="Left" RelativePanel.Above="midiInPortListBox" Width="1082" VerticalAlignment="Stretch"/>
            <Slider x:Name="volumeSlider" Minimum ="0" Maximum="100" Header="Volume" ValueChanged="Volume_ValueChanged"
                    Margin="80,400,572,-500" FontSize="36" Width="500" Height="100" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Above="OutputText" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <CheckBox  x:Name="Feedback" 
                       Margin="289,566,-241,-618" Click="Velocity_Checked" FontSize="36" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Above="volumeSlider" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5">
            </CheckBox>
            <TextBlock Margin="80,553,0.2,-641" Text="Set Velocity" TextWrapping="Wrap" Width="195" FontSize="36" RelativePanel.Above="volumeSlider"/>
            <Slider x:Name="velocitySlider" Minimum ="0" Maximum="100" Header="Velocity" ValueChanged="Velocity_ValueChanged"
                    Margin="80,669,843.2,-802" Width="500" FontSize="36" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignBottomWith="Feedback"/>


        </RelativePanel>
    </Grid>
</Page>

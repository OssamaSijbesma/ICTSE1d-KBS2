<Page
    x:Class="PiaNotes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiaNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox x:Name="midiInPortListBox" SelectionChanged="midiInPortListBox_SelectionChanged" Margin="252,250,709,250" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <ListBox x:Name="midiOutPortListBox" SelectionChanged="midiOutPortListBox_SelectionChanged" Margin="796,250,144,250" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <RelativePanel Background="White">
            <Rectangle x:Name="Sidebar" Fill="White" Stroke="Black" StrokeThickness="5" 
                       MinHeight="30" MinWidth="250"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       />
            <Rectangle x:Name="Progress" Fill="White" Stroke="Black" StrokeThickness="5" 
                       MinHeight="30"
                       RelativePanel.RightOf="Sidebar"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignTopWith="Keyboard" HorizontalAlignment="Stretch" Margin="0,-30,0,50" VerticalAlignment="Stretch"/>

            <Rectangle x:Name="Keyboard" Stroke="Black"
                       MinHeight="200" MinWidth="50"
                       RelativePanel.RightOf="Sidebar"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"/>

            <Button x:Name="C1" Content="C1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="Sidebar"
                    RelativePanel.AlignBottomWithPanel="True"/>

            <Button x:Name="D1" Content="D1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="C1"
                    RelativePanel.AlignBottomWithPanel="True"/>
            
            <Button x:Name="E1" Content="E1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="D1"
                    RelativePanel.AlignBottomWithPanel="True"/>

            <Button x:Name="F1" Content="F1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="E1"
                    RelativePanel.AlignBottomWithPanel="True"/>
            
            <Button x:Name="G1" Content="G1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="F1"
                    RelativePanel.AlignBottomWithPanel="True"/>
            
            <Button x:Name="A1" Content="A1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="G1"
                    RelativePanel.AlignBottomWithPanel="True"/>

            <Button x:Name="B1" Content="B1" Height="200" Width="40"
                    Foreground="Black" BorderBrush="Black" Background="White"
                    RelativePanel.RightOf="A1"
                    RelativePanel.AlignBottomWithPanel="True"/>



        </RelativePanel>
    </Grid>
</Page>

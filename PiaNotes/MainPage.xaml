<Page SizeChanged="Page_SizeChanged"
    x:Class="PiaNotes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiaNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">

    <Page.Resources>
        <Style x:Key="keyboardStyleWhite" TargetType="Rectangle">
            <Setter Property="Fill" Value="White" />
            <Setter Property="Stroke" Value="Black" />
            <Setter Property="StrokeThickness" Value="4" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="40" />
        </Style>
        <Style BasedOn="{StaticResource keyboardStyleWhite}" x:Key="keyboardStyleBlack" TargetType="Rectangle">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Height" Value="150" />
            <Setter Property="Width" Value="30" />
        </Style>
        
    </Page.Resources>

    <Grid>


        <ListBox x:Name="midiInPortListBox" SelectionChanged="midiInPortListBox_SelectionChanged" Margin="252,250,709,250" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <ListBox x:Name="midiOutPortListBox" SelectionChanged="midiOutPortListBox_SelectionChanged" Margin="796,250,144,250" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <RelativePanel Background="#162632">

            <Rectangle x:Name="KeyboardBG" Stroke="Black" StrokeThickness="5"
                       MinHeight="200"
                       RelativePanel.RightOf="Sidebar"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"/>

            <StackPanel Orientation="Horizontal" RelativePanel.RightOf="Sidebar" RelativePanel.AlignBottomWithPanel="True" x:Name="KeysWhite">
                <Rectangle Name="C1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="D1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="E1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="F1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="G1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="A1" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="B1" Style="{StaticResource keyboardStyleWhite}"/>
                
                <Rectangle Name="C2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="D2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="E2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="F2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="G2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="A2" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="B2" Style="{StaticResource keyboardStyleWhite}"/>
                
                <Rectangle Name="C3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="D3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="E3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="F3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="G3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="A3" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="B3" Style="{StaticResource keyboardStyleWhite}"/>
                
                <Rectangle Name="C4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="D4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="E4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="F4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="G4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="A4" Style="{StaticResource keyboardStyleWhite}"/>
                <Rectangle Name="B4" Style="{StaticResource keyboardStyleWhite}"/>
                
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" RelativePanel.RightOf="Sidebar" RelativePanel.AlignBottomWithPanel="True" x:Name="KeysBlack">
                <Rectangle Name="Csharp1" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Dsharp1" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Fsharp1" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Gsharp1" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Asharp1" Style="{StaticResource keyboardStyleBlack}"/>
                
                <Rectangle Name="Csharp2" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Dsharp2" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Fsharp2" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Gsharp2" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Asharp2" Style="{StaticResource keyboardStyleBlack}"/>
                
                <Rectangle Name="Csharp3" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Dsharp3" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Fsharp3" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Gsharp3" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Asharp3" Style="{StaticResource keyboardStyleBlack}"/>
                
                <Rectangle Name="Csharp4" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Dsharp4" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Fsharp4" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Gsharp4" Style="{StaticResource keyboardStyleBlack}"/>
                <Rectangle Name="Asharp4" Style="{StaticResource keyboardStyleBlack}"/>
                
                
            </StackPanel>


            <Rectangle x:Name="Sidebar" Fill="#2b3c49"
                       MinHeight="30" MinWidth="250"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWith="MenuStrip"
                       RelativePanel.AlignBottomWithPanel="True"/>

            <Rectangle x:Name="Progress" Fill="#2b3c49"
                       MinHeight="30"
                       RelativePanel.RightOf="Sidebar"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignTopWith="KeyboardBG" HorizontalAlignment="Stretch" Margin="0,-30,0,50" VerticalAlignment="Stretch"/>

            <Rectangle x:Name="MenuStrip" Fill="#253847"
                       MinHeight="35" MinWidth="250"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"/>

            <Button x:Name="File" Content="File" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#253847">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="New MIDI File" />
                        <MenuFlyoutItem Text="Open MIDI Selection" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button x:Name="View" Content="View" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#253847" RelativePanel.RightOf="File">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Sidebar" Click="ViewSidebar"/>
                        <MenuFlyoutItem Text="Keyboard" Click="ViewKeyboard" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button x:Name="Options" Content="Options" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#253847" RelativePanel.RightOf="View">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Settings" />
                        <MenuFlyoutItem Text="Credits" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>


        </RelativePanel>
    </Grid>
</Page>
